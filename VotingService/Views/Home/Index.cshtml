@{
    ViewData["Title"] = "SF Lab - Voting Service";
}
<head>
    <meta charset="utf-8" />
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <!-- Stylesheets -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">

    <!-- Application title and icons -->
    <title>Voting Service Lab Sample</title>

    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>
<body>
    <div class="container-fluid">
        <h1>Votes</h1>
        <div>
            <h4>Vote for something</h4>
            <input type="text" class="form-control" placeholder="Enter what you want to vote for" id="voteItem"/>
            <button class="btn btn-primary" onclick="addStatefulBackendServiceKeyValuePair()" type="button" id="addVote" style="margin-top: 10px">Add</button>
        </div>

        <br/>

        <table class="table table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <td>Voting Item</td>
                    <td>Votes</td>
                    <td><button id="refreshVote" class="btn btn-primary" onclick="getStatefulBackendServiceDictionary()">Refresh</button></td>
                </tr>
            </thead>
            <tr ng-repeat="vote in votes">
                <td><button class="btn btn-primary" ng-click="add(vote.Key)">{{vote.Key}}</button></td>
                <td>{{vote.Value}}</td>
                <td><button class="btn btn-default" ng-click="remove(vote.Key)">Remove</button></td>
            </tr>
        </table>
    </div>
</body>